<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CoordinatedBrgysActivity"
    android:background="@color/dark_blue">

    <ImageView
        android:id="@+id/backArrow"
        android:layout_width="30dp"
        android:layout_height="25dp"

        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        android:src="@drawable/left_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/layoutSearch"
        android:layout_width="220dp"
        android:layout_height="30dp"
        android:background="@drawable/white_container"

        android:layout_marginTop="28dp"
        android:layout_marginEnd="40dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText

            android:id="@+id/txtSearch"
            android:layout_width="180dp"
            android:layout_height="30dp"

            android:layout_marginEnd="5dp"
            android:layout_marginStart="10dp"

            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/search"

            android:background="@null"

            android:inputType="text"
            android:maxLines="1"

            android:fontFamily="sans-serif"
            android:textSize="15sp"
            android:textColor="@color/dark_blue" />

        <ImageView
            android:id="@+id/search"
            android:layout_width="15dp"
            android:layout_height="20dp"

            android:src="@drawable/search"
            android:layout_marginEnd="10dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="76dp"
        app:layout_constraintTop_toBottomOf="@+id/backArrow">

        <TextView
            android:id="@+id/lblCoordinatedBrgys"
            android:layout_width="200dp"
            android:layout_height="wrap_content"

            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:fontFamily="sans-serif-black"
            android:text="Coordinated Barangays"
            android:textColor="@color/white"
            android:textSize="33sp"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/sort"
            android:layout_width="30dp"
            android:layout_height="25dp"

            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/add"
            android:layout_marginTop="10dp"
            android:src="@drawable/sort" />

        <ImageView
            android:id="@+id/add"
            android:layout_width="30dp"
            android:layout_height="25dp"

            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/add"
            android:clickable="true"
            android:onClick="addBrgy"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerviewCoordinatedBrgys"
            android:layout_width="320dp"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/lblCoordinatedBrgys">
        </androidx.recyclerview.widget.RecyclerView>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>