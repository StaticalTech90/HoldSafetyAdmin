<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VerifyUserActivity"
    android:background="@color/dark_blue">

    <ImageView
        android:id="@+id/backArrow"
        android:layout_width="30dp"
        android:layout_height="25dp"

        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        android:src="@drawable/left_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/containerVerification"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"

        android:paddingTop="15dp"

        android:background="@drawable/white_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backArrow">

        <TextView
            android:id="@+id/lblVerification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:layout_marginStart="25dp"
            android:fontFamily="sans-serif-black"
            android:text="Verification"
            android:textColor="@color/dark_blue"
            android:textSize="40sp"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/lblVerifyDesc"
            android:layout_width="300dp"
            android:layout_height="wrap_content"

            android:fontFamily="sans-serif"
            android:layout_marginStart="25dp"
            android:text="For verification purposes, please enter your password"
            android:textColor="@color/gray"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_below="@id/lblVerification" />

        <RelativeLayout
            android:id="@+id/layoutPassword"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/lblVerifyDesc"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            >

            <TextView
                android:id="@+id/lblPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:fontFamily="sans-serif-light"
                android:text="Password"
                android:textColor="@color/dark_blue"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText

                android:id="@+id/txtPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_below="@+id/lblPassword"

                android:backgroundTint="@color/dark_blue"
                android:fontFamily="sans-serif-black"
                android:inputType="textPassword"
                android:textColor="@color/dark_blue" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layoutConfirmPassword"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/layoutPassword"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            >

            <TextView
                android:id="@+id/lblConfirmPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:fontFamily="sans-serif-light"
                android:text="Confirm Password"
                android:textColor="@color/dark_blue"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText

                android:id="@+id/txtConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_below="@+id/lblConfirmPassword"

                android:backgroundTint="@color/dark_blue"
                android:fontFamily="sans-serif-black"
                android:inputType="textPassword"
                android:textColor="@color/dark_blue" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/loginImg"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@id/layoutConfirmPassword"

            android:src="@drawable/holdsafety_verify" />

        <Button
            android:id="@+id/btnConfirm"
            android:layout_width="150dp"
            android:layout_height="55dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/blue_button"
            android:fontFamily="sans-serif-black"
            android:onClick="userVerify"
            android:padding="10dp"
            android:text="CONFIRM"
            android:textColor="@color/dark_blue"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_below="@id/layoutConfirmPassword"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>