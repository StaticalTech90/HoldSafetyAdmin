<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="20dp"
    android:id="@+id/layoutReports">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="20dp"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp">

            <TextView
                android:id="@+id/btnDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="@string/details_link"
                android:textColor="@color/dark_blue"
                android:textSize="18sp"

                android:layout_marginBottom="10dp"
                android:layout_alignParentEnd="true"/>

            <RelativeLayout
                android:id="@+id/reportIDLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnDetails">

                <TextView
                    android:id="@+id/lblReportID"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="@string/report_id"
                    android:textColor="@color/dark_blue"

                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/txtReportID"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="@string/_001"
                    android:textColor="@color/dark_blue"
                    android:textSize="18sp"

                    android:layout_toEndOf="@+id/lblReportID"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/reportUserNameLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/reportIDLayout">

                <TextView
                    android:id="@+id/lblReportUsername"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="@string/username"
                    android:textColor="@color/dark_blue"

                    android:textSize="18sp"
                    />

                <TextView
                    android:id="@+id/txtReportUsername"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="@string/username"
                    android:textColor="@color/dark_blue"
                    android:textSize="18sp"

                    android:layout_toEndOf="@+id/lblReportUsername"/>


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/reportUserNameLayout">

                <TextView
                    android:id="@+id/lblReportLocation"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="@string/location"
                    android:textColor="@color/dark_blue"

                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/txtReportLocation"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="@string/number_village_bldg_street_brgy_city"
                    android:textColor="@color/dark_blue"
                    android:textSize="18sp"


                    android:layout_toEndOf="@+id/lblReportLocation"/>
            </RelativeLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>